<html>
  <head>
    <meta charset='utf-8' />
    <title>App</title>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <link rel='stylesheet' href='app.css' />
    <script src='js/app.js' defer></script>
  </head>
  <body>
    <div class="modal" id="loadingMask" tabindex="-1" role="dialog">
      <div class="modal-dialog modal-dialog-centered modal-sm" role="document" >
        <div class="modal-content p-3 pt-5">
            <div class="d-flex justify-content-center">
                <div class="loader"></div> 
            </div>
        </div>
      </div>
    </div>
    <main class="root">
      <div class="main-content card">
          <div>
            <div style="text-align: left;">
              <h4 class="text-color">Address Parser</h3>
            </div>
            <textarea id="address_input" class="form-control" placeholder="Enter addresses" style="height: 200px;"></textarea>
            <button id="submit" class="btn btn-info mt-2">Submit</button>
          </div>
          <div class="card mt-2" style="min-height: 200px">
            <div class="card-header text-color card-header-color p-1 text-bold">Result</div>
            <div class="card-body p-1" id="result-content">
              
            </div>
          </div>
        </div>
    </main>
  </body>
</html>